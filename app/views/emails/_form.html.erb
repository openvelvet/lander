<%= form_for(@email) do |f| %>
  <% if @email.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@email.errors.count, "error") %> prohibited this email from being saved:</h2>

      <ul>
      <% @email.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :email, class: "form-control input-lg", placeholder: "email" %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.text_field :first_name, class: "form-control input-lg", placeholder: "First Name" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.text_field :last_name, class: "form-control input-lg", placeholder: "Last name" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.text_field :organization, class: "form-control input-lg", placeholder: "Company or School name" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.text_field :phone_number, class: "form-control input-lg", placeholder: "Phone Number" %>
  </div>
  <div class="form-group">
    <%= f.submit "Join the Beta List", class: "btn btn-primary btn-lg"  %>
  </div>
<% end %>
